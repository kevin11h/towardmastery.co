{% for article in articles %}
<div class="card article mx-auto">
  <img class="card-img-top" src="{{asset(article_img_directory ~ article.avatar)}}" alt="Card image cap">
  <div class="card-body">
    <h4 class="card-title">{{article.english.title}}</h4>
    <small>{{article.date | date("M d")}}</small>
    <p>
    {% for tag in article.english.tags %}
    <span class="badge badge-primary badge-pill tag ">{{tag.title}}</span>
    {% endfor %}
    </p>
    <p class="card-text">{{article.english.description}}</p>
    <a href="/en/engineerleaf/article/{{article.english.slug}}" class="btn btn-danger">Read</a>
  </div>
</div>
{% endfor %}
